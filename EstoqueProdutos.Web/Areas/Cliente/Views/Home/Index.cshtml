@model EstoqueProdutos.DataAccess.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

@if (Model.Destaques.Count() > 0)
{
    <div class="text-center">
        <h1 class="display-3">Destaques</h1>
    </div>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Imagem
                </th>
                <th>
                    Categoria
                </th>
                <th>
                    Nome
                </th>
                <th>
                    Preço
                </th>
                <th>
                    Descrição
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Destaques)
            {
                <div style="display:none;">
                    @(Model.Imagem = Model.Imagens.Where(x => x.ProdutoId == item.Id).FirstOrDefault())
                </div>
                <tr>
                    @if (Model.Imagem != null)
                    {
                        <td>
                            <img src=@Model.Imagem.ImageUrl width="100" height=100/>
                        </td>
                    }
                    else
                    {
                        <td></td>
                    }
                    <td>
                        @item.Categoria.Nome
                    </td>
                    <td>
                        @item.Nome
                    </td>
                    <td>
                        R$ @item.Preco.ToString("N2")
                    </td>
                    <td>
                        @item.Descricao
                    </td>
                    <td>
                        <a href="~/Cliente/Estoque/Details/@item.Id">Detalhes</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
}
