@model EstoqueProdutos.DataAccess.ViewModels.EstoqueViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Produto</h4>
    <hr />
    <!-- Slideshow container -->
    <div class="slideshow-container">

        @foreach(var imagem in Model.Imagens)
        {
            <!-- Full-width images with number and caption text -->
            <div class="mySlides">
                    <img src=@imagem.ImageUrl style="width:100%">
            </div>
        }

      <!-- Next and previous buttons -->
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <br>

    <!-- The dots/circles -->
    <div style="text-align:center">
    @for(int i = 1; i <= Model.Imagens.Count(); i++)
    {
      <span class="dot" onclick="currentSlide(@i)"></span>
    }
    </div>
    <dl class="row">
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Model.Produto.Categoria.Nome
        </dd>
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Model.Produto.Nome
        </dd>
        <dt class = "col-sm-2">
            Preço
        </dt>
        <dd class = "col-sm-10">
            R$ @Model.Produto.Preco.ToString("N2")
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Model.Produto.Descricao
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>
