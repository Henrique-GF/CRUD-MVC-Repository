@model EstoqueProdutos.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza que quer deletar esse Usuário?</h3>
<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id
        </dt>
        <dd class = "col-sm-10">
            @Model.Id
        </dd>
        <dt class = "col-sm-2">
            Usuário
        </dt>
        <dd class = "col-sm-10">
            @Model.Nome
        </dd>
        <dt class = "col-sm-2">
            Senha
        </dt>
        <dd class = "col-sm-10">
            @Model.Nome
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
