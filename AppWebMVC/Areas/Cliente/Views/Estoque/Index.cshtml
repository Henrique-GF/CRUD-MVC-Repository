@model EstoqueVeiculo.DataAccess.ViewModels.EstoqueViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
<h1 class="display-4">Estoque</h1>
</div>
<br />
<h2>Categoria</h2>
@using (Html.BeginForm("Index", "Estoque", FormMethod.Get))
{
    <select class ="form-control" name="Categoria" id="Categoria">
        <option value="">Selecione</option>
        @foreach(var item in ViewBag.Categorias)
        {
            <option value="@item.Value">@item.Text</option>
        }
    </select>
    <div class="form-group">
        <input type="submit" value="Filtrar" class="btn btn-primary" />
    </div>
}
<br />
@foreach (var tipo in Model.Categorias)
{
    @if(Model.Produtos.Any(x => x.CategoriaId == tipo.Id) == true)
    {
        <h2>@tipo.Nome</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Nome
                    </th>
                    <th>
                        Preço
                    </th>
                    <th>
                        Descrição
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Produtos.Where(x => x.CategoriaId == @tipo.Id))
                {
                    <tr>
                        <td>
                            <img src="@item.ImageUrl" width="100" height=100/>
                        </td>
                        <td>
                            @item.Nome
                        </td>
                        <td>
                            R$@item.Preco
                        </td>
                        <td>
                            @item.Descricao
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    }
}
