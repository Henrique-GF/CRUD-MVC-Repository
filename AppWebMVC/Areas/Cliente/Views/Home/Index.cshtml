@model EstoqueVeiculo.DataAccess.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-3">Destaques</h1>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Imagem
            </th>
            <th>
                Categoria
            </th>
            <th>
                Nome
            </th>
            <th>
                Preço
            </th>
            <th>
                Descrição
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Destaques)
    {        
        <tr>
            <td>
                <img src="@item.ImageUrl" width="100" height=100/>
            </td>
            <td>
                @item.Categoria.Nome
            </td>
            <td>
                @item.Nome
            </td>
            <td>
                R$@item.Preco
            </td>
            <td>
                @item.Descricao
            </td>
            <td>
                <a href="~/Cliente/Estoque/Details/@item.Id">Detalhes</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<br />
<br />
