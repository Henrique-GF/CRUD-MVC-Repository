@model IEnumerable<EstoqueVeiculo.Models.Veiculo>

@{
    ViewData["Title"] = "Index";
}

<h1>Veículos</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tipo
            </th>
            <th>
                Placa
            </th>
            <th>
                Marca
            </th>
            <th>
                Modelo
            </th>
            <th>
                Versão
            </th>
            <th>
                Ano
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.TipoVeiculo.Nome
            </td>
            <td>
                @item.Placa
            </td>
            <td>
                @item.Marca
            </td>
            <td>
                @item.Modelo
            </td>
            <td>
                @item.Versao
            </td>
            <td>
                @item.AnoFabricacao/ @item.AnoModelo
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
